@model AgizDisSagligiTakip.Core.ViewModels.ParolaHatirlatKodViewModel

@{
    ViewData["Title"] = "Parola Hatırlatma";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Parola Hatırlatma</h3>
                </div>
                <div class="card-body">
                    @if (TempData["BilgiMesaji"] != null)
                    {
                        <div class="alert alert-info">
                            @TempData["BilgiMesaji"]
                        </div>
                    }

                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form method="post" action="/Kullanici/ParolaHatirlat">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Adim" value="@Model.Adim" />

                        @if (Model.Adim == "EmailGirisi")
                        {
                            <div class="mb-3">
                                <label for="Email" class="form-label">E-posta</label>
                                <input id="Email" name="Email" class="form-control" type="email" 
                                       value="@Model.Email" required />
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Doğrulama Kodu Gönder</button>
                            </div>
                        }
                        else if (Model.Adim == "KodDogrulama")
                        {
                            <input type="hidden" name="Email" value="@Model.Email" />
                            <div class="alert alert-success">
                                <strong>@Model.Email</strong> adresine doğrulama kodu gönderildi.
                                <br><small>(Geliştirme aşamasında kod konsola yazdırılmaktadır)</small>
                            </div>
                            
                            <div class="mb-3">
                                <label for="DogrulamaKodu" class="form-label">Doğrulama Kodu (6 haneli)</label>
                                <input id="DogrulamaKodu" name="DogrulamaKodu" class="form-control" type="text" 
                                       maxlength="6" placeholder="123456" required />
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success">Kodu Doğrula</button>
                            </div>
                        }
                        else if (Model.Adim == "SifreGuncelleme")
                        {
                            <input type="hidden" name="Email" value="@Model.Email" />
                            <div class="alert alert-success">
                                Kod doğrulandı! Şimdi yeni şifrenizi belirleyebilirsiniz.
                            </div>
                            
                            <div class="mb-3">
                                <label for="YeniSifre" class="form-label">Yeni Şifre</label>
                                <input id="YeniSifre" name="YeniSifre" class="form-control" type="password" required />
                                <div class="form-text">En az 8 karakter, büyük-küçük harf ve rakam içermeli</div>
                            </div>

                            <div class="mb-3">
                                <label for="YeniSifreTekrar" class="form-label">Yeni Şifre Tekrar</label>
                                <input id="YeniSifreTekrar" name="YeniSifreTekrar" class="form-control" type="password" required />
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
                            </div>
                        }

                        <div class="text-center mt-3">
                            <a href="/Kullanici/Giris" class="btn btn-link">Giriş Sayfasına Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
                                                <option value="">Se√ßiniz</option>
                                                <option value="1">D√º≈ü√ºk</option>
                                                <option value="2">Orta</option>
                                                <option value="3">Y√ºksek</option>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100">Hedef Olu≈ütur</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Sekme ge√ßi≈ülerini Bootstrap ile aktif etme TODO: 
    var triggerTabList = [].slice.call(document.querySelectorAll('#pills-tab button'))

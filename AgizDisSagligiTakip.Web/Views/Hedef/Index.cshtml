                                                        }
                                                        <div>
                                                            <span class="badge bg-info">@hedef.Periyot.ToString()</span>
                                                            <span class="badge @(hedef.OnemDerecesi.ToString() == "Dusuk" ? "badge-onem-dusuk" : 
                                                                                hedef.OnemDerecesi.ToString() == "Orta" ? "badge-onem-orta" : "badge-onem-yuksek")">

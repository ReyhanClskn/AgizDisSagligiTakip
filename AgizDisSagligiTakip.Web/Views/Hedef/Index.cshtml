<script>
    // Hedef silme onayÄ±
    function hedefSilOnay(event, hedefId, hedefBaslik) {
        event.preventDefault(); // Formun hemen gÃ¶nderilmesini engelle

        fetch('/Hedef/HedefKayitKontrol?id=' + hedefId)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                let mesaj = '';
                if (data.kayitSayisi > 0) {
                    mesaj = `"${hedefBaslik}" hedefi iÃ§in ${data.kayitSayisi} adet kayÄ±t bulunuyor.\n\n` +
                            `Hedefi sildiÄŸinizde tÃ¼m kayÄ±tlar da silinecek!\n\n` +
                            `Silmek istediÄŸinizden emin misiniz?`;
                } else {
                    mesaj = `"${hedefBaslik}" hedefini silmek istediÄŸinizden emin misiniz?`;
                }
                
                if (confirm(mesaj)) {
                    // KullanÄ±cÄ± onaylarsa formu gÃ¶nder
                    event.target.closest('form').submit();
                }
            })
            .catch(error => {
                console.error('Hata:', error);
                // Fetch hatasÄ± olsa bile kullanÄ±cÄ±ya sormaya devam et
                if (confirm(`"${hedefBaslik}" hedefini silerken bir hata oluÅŸtu, yine de silmeyi denemek ister misiniz?`)) {
                    event.target.closest('form').submit();
                }
            });
    }
</script>
                                                </form>
                                                
                                                <small class="text-muted d-block mb-2">üìÖ @not.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</small>
                                                
                                                @if (!string.IsNullOrEmpty(not.GorselYolu))
                                                {
                                                    <div class="mb-2">
                                                        <img src="@not.GorselYolu" alt="Not g√∂rseli" class="img-fluid rounded" style="max-height: 150px; cursor: pointer;" 
                                                            onclick="window.open('@not.GorselYolu', '_blank')" />
                                                    </div>
                                                }
                                                
                                                <p class="mb-0 pe-4">@not.Aciklama</p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Hedef Sekmesi -->
                <div class="tab-pane fade" id="pills-hedef" role="tabpanel">
                    <div class="row">
                        <!-- Mevcut Hedefler -->
                        <div class="col-md-8">
                            <div class="card card-custom">
                                <div class="card-header">
                                    <h5 class="mb-0">üéØ Mevcut Hedefler</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Any())
                                    {
                                        @foreach (var hedef in Model)
                                        {
                                            <div class="mb-3 p-3 border rounded">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div>
                                                        <h6 class="fw-bold">@hedef.Baslik</h6>
                                                        @if (!string.IsNullOrEmpty(hedef.Aciklama))
                                                        {
